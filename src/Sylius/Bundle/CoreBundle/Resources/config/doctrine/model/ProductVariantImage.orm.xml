<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Sylius\Component\Core\Model\ProductVariantImage" table="sylius_product_variant_image">
        <many-to-one field="variant" target-entity="Sylius\Component\Product\Model\Variant" inversed-by="images">
            <cascade>
                <cascade-persist />
            </cascade>
        </many-to-one>

        <many-to-one field="imageType" target-entity="Sylius\Component\Core\Model\ProductVariantImageType">
            <join-column name="image_type_id" referenced-column-name="id" nullable="false" />
            <cascade>
                <cascade-persist />
            </cascade>
        </many-to-one>
    </mapped-superclass>

</doctrine-mapping>
