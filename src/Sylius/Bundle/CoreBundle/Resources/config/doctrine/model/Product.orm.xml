<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Sylius\Component\Core\Model\Product" table="sylius_product">
        <field name="shortDescription" column="short_description" type="string" nullable="true">
            <gedmo:versioned />
        </field>
        <field name="variantSelectionMethod" column="variant_selection_method" type="string" nullable="false" />

        <many-to-one field="taxCategory" target-entity="Sylius\Component\Taxation\Model\TaxCategory">
            <join-column name="tax_category_id" referenced-column-name="id" nullable="true" />
            <cascade>
                <cascade-persist />
            </cascade>
        </many-to-one>

        <many-to-one field="shippingCategory" target-entity="Sylius\Component\Shipping\Model\ShippingCategory">
            <join-column name="shipping_category_id" referenced-column-name="id" nullable="true" />
            <cascade>
                <cascade-persist />
            </cascade>
        </many-to-one>

        <many-to-one field="restrictedZone" target-entity="Sylius\Component\Addressing\Model\Zone">
            <join-column name="restricted_zone" referenced-column-name="id" nullable="true" />
            <cascade>
                <cascade-persist />
            </cascade>
        </many-to-one>

        <one-to-many field="attributes" target-entity="Sylius\Component\Product\Model\AttributeValue" mapped-by="subject">
            <cascade>
                <cascade-all />
            </cascade>
        </one-to-many>

        <one-to-many field="variants" target-entity="Sylius\Component\Product\Model\Variant" mapped-by="object">
            <cascade>
                <cascade-all />
            </cascade>
        </one-to-many>

        <many-to-many field="options" target-entity="Sylius\Component\Product\Model\Option">
            <join-table name="sylius_product_options">
                <join-columns>
                    <join-column name="product_id" referenced-column-name="id" nullable="false" unique="false" on-delete="CASCADE" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="option_id" referenced-column-name="id" nullable="false" unique="false" on-delete="CASCADE" />
                </inverse-join-columns>
            </join-table>
            <cascade>
                <cascade-persist />
            </cascade>
        </many-to-many>

        <many-to-many field="taxons" inversed-by="products" target-entity="Sylius\Component\Taxonomy\Model\Taxon">
            <join-table name="sylius_product_taxon">
                <join-columns>
                    <join-column name="product_id" referenced-column-name="id" nullable="false" on-delete="CASCADE" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="taxon_id" referenced-column-name="id" nullable="false" on-delete="CASCADE" />
                </inverse-join-columns>
            </join-table>
            <cascade>
                <cascade-persist />
            </cascade>
        </many-to-many>
    </mapped-superclass>

</doctrine-mapping>
