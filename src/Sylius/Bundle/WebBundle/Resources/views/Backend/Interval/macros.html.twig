{% macro list(intervals) %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}
{% import 'SyliusWebBundle:Backend/Macros:misc.html.twig' as misc %}

{% if intervals|length > 0 %}
<table class="table">
    <thead>
        <tr>
            <th>{{ sylius_resource_sort('id', '#id') }}</th>
            <th>{{ sylius_resource_sort('minute', 'sylius.interval.no_of_day'|trans) }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for interval in intervals %}
        <tr id="{{ interval.id }}">
            <td>{{ interval.id }}</td>
            <td>{{ interval.noOfDay }}</td>
            <td>
                <div class="pull-right">
                {{ buttons.show(path('sylius_backend_interval_show', {'id': interval.id})) }}
                {{ buttons.edit(path('sylius_backend_interval_update', {'id': interval.id})) }}
                {{ buttons.delete(path('sylius_backend_interval_delete', {'id': interval.id})) }}
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
{{ alerts.info('sylius.interval.no_results'|trans) }}
{% endif %}

{% endmacro %}
