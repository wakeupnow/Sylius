{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}
{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}

{% block topbar %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.configuration'|trans }}</li>
    <li><a href="{{ path('sylius_backend_interval_index') }}">{{ 'sylius.breadcrumb.interval.index'|trans }}</a></li>
    <li>{{ interval.noOfDay }}</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
<h1>{{ 'sylius.interval.show_header'|trans|raw }}</h1>
</div>

<div class="well">
    <a href="{{ path('sylius_backend_interval_index') }}" class="btn btn-primary">
        <i class="glyphicon glyphicon-list-alt"></i> {{ 'sylius.interval.manage'|trans }}
    </a>
    <a href="{{ path('sylius_backend_interval_update', {'id': interval.id}) }}" class="btn">
        <i class="glyphicon glyphicon-pencil"></i> {{ 'sylius.edit'|trans }}
    </a>
    {{ buttons.delete(path('sylius_backend_interval_delete', {'id': interval.id})) }}
</div>

<table class="table table-bordered table-condensed">
    <thead>
        <tr>
            <th>{{ 'sylius.interval.no_of_day'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{ interval.noOfDay }}</td>
        </tr>
    </tbody>
</table>
{% endblock %}
