{% macro list(fulfillment_providers) %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}

{% if fulfillment_providers|length > 0 %}
<table class="sylius-fulfillment-providers-table table table-bordered">
    <thead>
        <tr>
            <th class="id">{{ sylius_resource_sort('id', '#id') }}</th>
            <th class="info">{{ sylius_resource_sort('name', 'sylius.form.fulfillment.name'|trans) }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for fulfillmentProvider in fulfillment_providers %}
        <tr id="{{ fulfillmentProvider.id }}">
            <td class="id">
                {{ fulfillmentProvider.id }}
            </td>
            <td class="info">
                <div class="media">
                    <a
                       {#href="{{ path('sylius_backend_fulfillment_provider_show', {'id': fulfillmentProvider.id}) }}" class="pull-left"#}
                       title="{{ 'sylius.form.fulfillment.view_details'|trans({'%product%': fulfillmentProvider.name})|escape('html_attr') }}">
                    </a>
                    <div class="media-body">
                        <h5 class="media-heading">
                            <a class="name"
                               title="{{ 'sylius.form.fulfillment.view_details'|trans({'%product%': fulfillmentProvider.name})|escape('html_attr') }}">
                                {{ fulfillmentProvider.name }}
                            </a>
                        </h5>
                    </div>
                </div>
            </td>
            <td class="center-text">
                {{ buttons.edit(path('sylius_backend_fulfillment_provider_update', {'id': fulfillmentProvider.id})) }}
                {{ buttons.delete(path('sylius_backend_fulfillment_provider_delete', {'id': fulfillmentProvider.id})) }}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
{{ alerts.info('sylius.fulfillment.no_results'|trans) }}
{% endif %}

{% endmacro %}
