{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% from 'SyliusWebBundle:Backend/FulfillmentProvider:macros.html.twig' import list %}

{% block topbar %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.assortment'|trans }}</li>
    <li><a href="{{ path('sylius_backend_taxonomy_index') }}">{{ 'sylius.breadcrumb.fulfillment.index'|trans }}</a></li>
    <li>{{ fulfillment_provider.name }}</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <div class="actions-menu">
        {{ buttons.create(path('sylius_backend_fulfillment_provider_create', {'fulfillmentProviderId': fulfillment_provider.id}), 'sylius.form.fulfillment.create'|trans) }}
        {#{{ buttons.manage(path('sylius_backend_fulfillment_provider_index'), 'sylius.taxonomy.manage'|trans) }}#}
    </div>
    <h1><i class="glyphicon glyphicon-tags"></i> {{ 'sylius.form.fulfillment.show_header'|trans({'%name%': fulfillment_provider.name})|raw }}</h1>
</div>

{#{{ list(taxonomy, taxonomy.taxons) }}#}

{% endblock %}
