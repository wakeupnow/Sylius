{% extends 'SyliusWebBundle:Frontend:layout.html.twig' %}

{% block title %}
    {{ settings.title|default('sylius.meta.frontend_title'|trans) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets output='assets/compiled/styles-responsive.min.css' filter='cssrewrite'
                'bundles/syliusweb/css/styles-responsive.min.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}
{% endblock stylesheets %}

{% block main_container %}
    <div class="page-wrapper checkout">
    {% block header %}
        <header>
            {% block cart_step_header %}
                
            {% endblock cart_step_header %}
        </header>
    {% endblock header %}

    {% block flashes %}
        {{ parent() }}
    {% endblock flashes %}

    {% block main %}
        
        {% block content %}
        {% endblock %}
        
        <div class="row">
            {% for i in 1..3 %}
                <div class="col-md-4">
                    {{ sonata_block_render({'name': '/cms/blocks/block-' ~ i}) }}
                </div>
            {% endfor %}
        </div>
        
    {% endblock main %}

    {% block gallery %}
        {{ parent() }}
    {% endblock %}
    </div>
    {% block footer %}

        <footer>
                <div class="footer-top"></div>
                <div class="footer-bottom">
                        <div class="container">
                                <div class="scrollTop bttn-scroll-top"></div>
                                <div class="social-icons clearfix">
                                        <a href="https://www.facebook.com/wakeupnowinc" target="_blank"><img src="{{asset('bundles/syliusweb/img/global/icon-facebook-grey.png')}}" /></a>
                                        <a href="https://twitter.com/wakeupnowinc" target="_blank"><img src="{{asset('bundles/syliusweb/img/global/icon-twitter-grey.png')}}" /></a>
                                        <a href="https://vimeo.com/wakeupnowinc" target="_blank"><img src="{{asset('bundles/syliusweb/img/global/icon-vimeo-grey.png')}}" /></a>
                                        <a href="https://instagram.com/wakeupnowofficial" target="_blank"><img src="{{asset('bundles/syliusweb/img/global/icon-instagram-grey.png')}}" /></a>
                                </div>
                                <div class="footer-logo"><a href="/"><img src="{{asset('bundles/syliusweb/img/global/logo-wake-up-footer.png')}}" title="Wake Up Now" /></a></div>
                        </div>
                </div>
        </footer>


        {# Confirmation modal #}
        {#% include 'SyliusWebBundle::confirm-modal.html.twig' %#}
    {% endblock footer %}
  
 {% endblock main_container %}    

        {# javascripts... #}
{% block javascripts %}
    {{ parent() }}
{% javascripts output='assets/compiled/cart-frontend.js'
    'bundles/syliusweb/js/jquery-1.11.0.min.js'
    'bundles/syliusweb/js/scripts.js'
%}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %} 
                
