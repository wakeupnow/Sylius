<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    
    <parameters>
       <parameter key="sylius.controller.interval.class">Sylius\Bundle\AutoPayBundle\Controller\IntervalController</parameter>
       <parameter key="sylius.form.type.interval.class">Sylius\Bundle\AutoPayBundle\Form\Type\IntervalType</parameter>
       <parameter key="sylius.auto_pay.manager.class">Sylius\Bundle\AutoPayBundle\Manager\AutoPayManager</parameter>
       <parameter key="sylius.listener.init_auto_pay.class">Sylius\Bundle\AutoPayBundle\EventListener\AutoPayListener</parameter>
    </parameters>

    <services>       
        <service id="sylius.form.type.interval" class="%sylius.form.type.interval.class%">
            <argument>%sylius.model.interval.class%</argument>
            <argument>%sylius.validation_group.interval%</argument>
            <tag name="form.type" alias="sylius_interval" />
        </service>
        <service id="sylius.auto_pay.manager" class="%sylius.auto_pay.manager.class%">
            <argument type="service" id="service_container"/>
            <argument type="service" id="sylius.manager.autoPay" />
            <argument type="service" id="sylius.repository.autoPay" />
        </service>
        
        <service id="sylius.listener.init_auto_pay" class="%sylius.listener.init_auto_pay.class%">
            <argument type="service" id="service_container"/>
            <tag name="kernel.event_listener" event="sylius.auto_pay.pre_create" method="initAutoPay" />
        </service>

    </services> 
    
</container>
