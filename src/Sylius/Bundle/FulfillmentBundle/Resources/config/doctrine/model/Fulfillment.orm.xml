<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Sylius\Component\Fulfillment\Model\Fulfillment" table="sylius_fulfillment">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>
		<many-to-one field="protocol" target-entity="Sylius\Component\Fulfillment\Model\ProtocolInterface" >
            <join-column name="protocol_id" referenced-column-name="id" nullable="false" />
        </many-to-one>
		<many-to-one field="fileType" target-entity="Sylius\Component\Fulfillment\Model\FileTypeInterface" >
            <join-column name="file_type_id" referenced-column-name="id" nullable="false" />
        </many-to-one>
		<many-to-one field="interval" target-entity="Sylius\Component\AutoPay\Model\Interval" >
            <join-column name="interval_id" referenced-column-name="id" nullable="false" />
            <cascade>
                <cascade-persist/>
            </cascade>
        </many-to-one>
        <many-to-one field="fulfillmentProvider" target-entity="Sylius\Component\Fulfillment\Model\FulfillmentProvider" >
            <join-column name="fulfillment_provider_id" referenced-column-name="id" />
        </many-to-one>
        <!-- <one-to-one target-entity="Sylius\Component\Core\Model\Product" mapped-by="fulfillment" field="products" /> -->
        <many-to-many field="parameters" target-entity="Sylius\Component\Fulfillment\Model\ProviderParameter">
            <join-table name="sylius_fulfillment_provider_parameter">
                <join-columns>
                    <join-column name="fulfillment_provider_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="provider_parameter_id" referenced-column-name="id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
        <one-to-many field="products" target-entity="Sylius\Component\Core\Model\Product" mapped-by="fulfillment" />
        <!--<gedmo:versioned /> -->
    </mapped-superclass>

</doctrine-mapping>
