<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Sylius\Component\Fulfillment\Model\ProviderParameter" table="sylius_provider_parameter">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>
		<many-to-one field="parameterType" target-entity="Sylius\Component\Fulfillment\Model\ParameterTypeInterface">
            <join-column name="parameter_type_id" referenced-column-name="id" nullable="false" />
        </many-to-one>
        <many-to-one field="fulfillmentProvider" target-entity="Sylius\Component\Fulfillment\Model\FulfillmentProvider" inversed-by="parameters">
            <join-column name="fulfillment_provider_id" referenced-column-name="id" nullable="false" />
        </many-to-one>
		<field name="value" column="value" type="string">
        </field>
        <!--<gedmo:versioned /> -->
    </mapped-superclass>

</doctrine-mapping>
