<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">

    <mapped-superclass name="Sylius\Component\Payment\Model\PaymentState" table="sylius_payment_state">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="name" column="name" type="string" nullable="false" unique="true" />

        <one-to-many field="shipments" target-entity="Sylius\Component\Shipping\Model\Shipment" mapped-by="state">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>

    </mapped-superclass>

</doctrine-mapping>
